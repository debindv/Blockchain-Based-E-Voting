<div class="container-fluid" >

    <div class="row">
      <div class="col-sm-4 text-white bg-primary">
      </br>
        <h3 class="text-center font-weight-normal">Add Candidate</h3>
        <div class="container">
        </br>
          <form action="/admin/address" method="post">
            <div class="form-group">
              <label for="email">Name of the Candidate:*</label>
              <input type="text" class="form-control" name="cname" placeholder="Candidate Name" id="cname">
              <label for="email">Enter contract address:*</label>
              <input type="text" class="form-control" name="address" placeholder="Eg: 0x74d2C209EB805411315BC025bF0f1d596c2a6b78" id="address">
            </div>
            <button type="submit"  class="btn btn-light">Submit</button>
          </form>
        </div>
          
      </div>
      <div class="col-sm-4 text-white bg-warning">
      </br>
        <h3 class="text-center font-weight-normal">Coinbase Updation</h3>
        <div class="container">
        </br>
          <form action="/admin/coinbase" method="post">
            <div class="form-group">
              <label for="email">Enter current coinbase address:*</label>
              <input type="text" class="form-control" name="ccoinbase" placeholder="Eg: 0x40f4DE94adE960620c00474C12752a5fA49CB78b" id="ccoinbase">
              <label for="email">Enter current Private Key:*</label>
              <input type="text" class="form-control" name="cprivatekey" placeholder="Eg: 0x23eb4fcdaf0e777d818e96f8e1ffea034dfd881f24ed745db52b" id="cprivatekey">
              <label for="email">Enter new coinbase address:*</label>
              <input type="text" class="form-control" name="coinbase" placeholder="Eg: 0x40f4DE94adE960620c00474C12752a5fA49CB78b" id="coinbase">
              <label for="email">Enter new Private Key:*</label>
              <input type="text" class="form-control" name="privatekey" placeholder="Eg: 0x23eb4fcdaf0e777d818e96f8e1ffea034dfd881f24ed745db52b" id="privatekey">
            </div>
            <button type="submit"  class="btn btn-light">Submit</button>
          </form>
        </br>
        </div>
        
      </div>
      <div class="col-sm-4 text-white bg-danger">
      </br>
        <h3 class="text-center font-weight-normal">Voters List</h3>
    </br>
        <div class="container">
          <h5>No. of people who voted = <%=vcount%></h5>
        <h5>Total no. of people = <%=ucount%></h5>
      </br>
    </br>
        <a type="button" class="btn btn-light" href="/admin/votedList"> See the complete list </a>
        </div>
      </div>
    </div>
    <% include ./messages %>  
</br>
<div class="row">
  <div class="col-sm-4 text-white bg-success">
  </br>
    <h3 class="text-center font-weight-normal">Remove User</h3>
    <div class="container">

    </br>
      <form action="/admin/removeUser" method="post">
        <div class="form-group">
          <label for="email">Email of User:*</label>
          <input type="email" class="form-control" name="email" placeholder="Email address" id="email">
        </div>
        <button type="submit"  class="btn btn-light">Remove</button>
      </form>
    </br>
  </br>
    </div>
   </div>
   <div class="col-sm-4 text-white bg-info">
  </br>
    <h3 class="text-center font-weight-normal">Complete Registered User</h3>
    <div class="container">
  </br>
</br>
<div class="text-center">
    <a type="button" class="btn btn-light" href="/admin/completeList"> See the complete list </a>
  </div>
