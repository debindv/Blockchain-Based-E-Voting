    <style>
      .button{
          display: inline-block;
          width: 220px;
          height: 60px;
          border: 2px solid black;
          color:red;
          font-size: 20px;
          font-weight: bold;
          text-transform: uppercase;
          text-align: center;
          text-decoration: none;
          line-height: 56px;
          box-sizing: border-box;
          border-radius: 50px;
          background-color:transparent;
          outline:none;
      }
        .active{
          font-size: 0;
          width: 50px;
          height:  50px;
          border-radius:50%;
          border-left-color: transparent;
          animation: rotate 1.4s ease 0.5s infinite;
        }
        @keyframes rotate{
          0%{
            transform: rotate(360deg) ;
          }
        }
        .success{
          position: relative;
          background-color: #fff;
          animation: bounce .3s ease-in;
        }
        @keyframes bounce{
          0%{
            transform: scale(0.9);
          }
        }
        .success:before{
  
          content:'';
          position: absolute;
          background: url(check-solid.svg) no-repeat;
          left:0;
          right:0;
          margin:0 auto;
          width: 31px;
          height: 31px;
          line-height: 31px;
          top: 8px;
  
        }
      </style>
  </head>
